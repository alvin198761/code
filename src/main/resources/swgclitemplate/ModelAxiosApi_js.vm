import axios from 'axios';
import querystring from 'querystring';
import {getGlobalToken} from '../utils/constant';


#foreach ($fun in $methods)
/**
* ${fun.note}
* @params payload
* @returns ${fun.description}
*/
export function ${fun.name}(payload) {
  return axios({
        method: '${fun.method}',
        url: ${fun.url},
        headers:{
                'content-type': '${fun.consumes}',
                'platform':3,
                'version': 2.0,
                'channel' : 0,
                'Authorization' : getGlobalToken()
        },
        #if($fun.method == 'get')
        data: ${fun.params}
        #end
        #if($fun.method == 'post')
            #if($fun.reqParamType == 'body')
        data: JSON.stringify(payload)
            #end
            #if($fun.reqParamType == 'formdata')
        data: { ... payload}
            #end
        #end
        #if($fun.method == 'put')
        data: querystring.stringify(payload)
        #end
        #if($fun.method == 'delete')
        data: {...payload}
        #end
});
}
#end

